<h1>カート一覧</h1>
<% if @items.blank? %>
  <p>カートに商品はありません</p>
<% else %>
  <%= link_to '購入に進む', new_order_path %>
<% end %>
<p>--------------------</p>

<% @items.each do |item_id, count| %>
  <% item = get_item(item_id) %>
  <p>商品名:<%= item.name %></p>
  <p>価格:<%= item.price %></p>
  <p>個数:<%= count %></p>
  <%= link_to 'カートから商品を削除する', item_remove_from_cart_path(item) %>
  <p>================</p>
<% end %>